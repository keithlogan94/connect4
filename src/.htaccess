Options +Indexes

RewriteEngine On


#RewriteCond %{REQUEST_URI} /$
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-l


RewriteRule ^is_game_ready/([0-9a-z]+)/?$ /index.php?request_code=setup_is_game_ready&invite_code=$1 [QSA,L]
RewriteRule ^logout/?$ /index.php?request_code=logout [QSA,L]
RewriteRule ^login_request/?$ /index.php?request_code=login_request [QSA,L]
RewriteRule ^invite/([0-9a-z]+)/?$ /index.php?request_code=invite_link&invite_code=$1 [QSA,L]
RewriteRule ^register_user/?$ /index.php?request_code=register_user [QSA,L]
RewriteRule ^signup/?$ /index.php?request_code=signup [QSA,L]
RewriteRule ^login/?$ /index.php?request_code=login [QSA,L]
RewriteRule ^membership/?$ /index.php?request_code=membership [QSA,L]
RewriteRule ^how-to-play/?$ /index.php?request_code=how_to_play [QSA,L]
RewriteRule ^setup/?$ /index.php?request_code=game_setup [QSA,L]
RewriteRule ^([0-9]+)/?$ /index.php?request_code=game&game_id=$1 [QSA,L]
RewriteRule ^create-game/?$ /index.php?request_code=create_game [QSA,L]
RewriteRule ^([0-9]+)/game_positions/?$ /index.php?request_code=get_game_positions&game_id=$1 [QSA,L]
RewriteRule ^([0-9]+)/place_game_piece/(yellow|red)/([1-6])?$ /index.php?request_code=place_game_piece&game_id=$1&color=$2&column=$3 [QSA,L]
RewriteRule ^([0-9]+)/nearest_to_bottom_game_position/([1-6])?$ /index.php?request_code=get_nearest_to_bottom_game_position&game_id=$1&column=$2 [QSA,L]
RewriteRule ^([0-9]+)/game_info/([a-z_]+)?$ /index.php?request_code=game_info&game_id=$1&game_info=$2 [QSA,L]


ErrorDocument 404 /index.php
